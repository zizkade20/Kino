<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid>

        <UniformGrid Name="grid" RenderTransformOrigin="0.5,0.5" Margin="10,53,9,1">
            <UniformGrid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.131"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.498"/>
                </TransformGroup>
            </UniformGrid.RenderTransform>

        </UniformGrid>
        <TextBox HorizontalAlignment="Center" IsReadOnly="True" Margin="0,10,0,0" TextWrapping="Wrap" Text="Plátno" VerticalAlignment="Top" Width="528" Height="22" Background="#FFD6D6D6"/>
        
    </Grid>

</Window>
